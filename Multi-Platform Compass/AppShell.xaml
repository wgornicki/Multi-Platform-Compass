<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Multi_Platform_Compass.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Multi_Platform_Compass"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem
        Title="Home"
        FlyoutDisplayOptions="AsSingleItem">
    <ShellContent
        Title="Compass"
        ContentTemplate="{DataTemplate local:CompassPage}"
        Route="CompassPage" />
    <ShellContent 
        Title="Map" 
        ContentTemplate="{DataTemplate local:MapPage}"
        Route="MapPage"/>
    </FlyoutItem>
</Shell>
